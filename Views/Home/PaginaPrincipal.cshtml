@{
    ViewBag.Title = "Perfil";
}

<head>
    <link href="~/css/Perfil.css" rel="stylesheet" />
</head>

<body onload="cargarPerfilUsuario()">
    <img src="~/css/imagenes/logo.png" alt="LogoAplicacion" height="150" width="150" class="logo">
    <img src="~/css/imagenes/PerfilUsu.png" alt="PerfilUsu" height="180" width="180" class="usuario">

    <button class="paginapb" onclick="window.location.href='@Url.Action("PaginaPrincipal", "Home")'">Pagina Principal</button>

    <div class="contenPer">
        <h2>Perfil del Usuario</h2>
        <div class="informacion">
            <div class="dato">Cédula: <span class="cedula">123456789</span></div>
            <div class="dato">Nombre: <span class="nombre">Juan</span></div>
            <div class="dato">Apellido: <span class="apellido">Pérez</span></div>
            <div class="dato">Teléfono: <span class="telefono">3123456789</span></div>
            <div class="dato">Dirección: <span class="direccion">Calle 123</span></div>
            <div class="dato">Correo: <span class="correo">usuario@ejemplo.com</span></div>
            <div class="dato">Contraseña: <span>••••••••</span></div>
            <div class="dato">ID Usuario: <span id="idUsuarioSpan">1</span></div>
            <div class="dato">ID Rol: <span id="idRolSpan">1</span></div>
            <div class="dato">Estado de Suspensión: <span id="estadoSuspensionSpan">Activo</span></div>
        </div>
        <button class="editar" onclick="mostrarVentanaEmergenteEditar()">Editar</button>
        <button class="eliminaru" onclick="mostrarVentanaEmergenteEliminar()">Eliminar Usuario</button>
    </div>

    <footer>
        <p>2024 - UdAPP - Política de Privacidad</p>
    </footer>

    <!-- Modal de edición de usuario -->
    <div id="modal1" class="modal1" style="display: none;">
        <div class="modal-contentEdi">
            <span class="close" onclick="cerrarVentanaEmergenteEditar()">&times;</span>
            <div class="editar-usuario">
                <p>Editar Datos del Usuario</p>
                <form id="formularioEditarUsuario" onsubmit="actualizarPerfilUsuario(event)">
                    <input type="hidden" id="idUsuario" value="" readonly />
                    <input type="text" id="cedulaUsuario" placeholder="CEDULA" readonly>
                    <input type="hidden" id="idRol" value="" readonly />
                    <input type="hidden" id="estadoSuspension" value="false" readonly />

                    <input type="text" id="nombreUsuario" placeholder="NOMBRE" required>
                    <input type="text" id="apellidoUsuario" placeholder="APELLIDO" required>
                    <input type="text" id="telefonoUsuario" placeholder="TELÉFONO" required>
                    <input type="text" id="direccionUsuario" placeholder="DIRECCIÓN" required>
                    <input type="email" id="correoUsuario" placeholder="CORREO" required>
                    <input type="password" id="contrasenaUsuario" placeholder="CONTRASEÑA" required>

                    <div class="botones">
                        <button type="button" onclick="cerrarVentanaEmergenteEditar()" class="cancelar">Cancelar</button>
                        <button type="submit">Actualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal de eliminación de usuario -->
    <div id="modal2" class="modal2" style="display: none;">
        <div class="modal-contentElim">
            <span class="close" onclick="cerrarVentanaEmergenteEliminar()">&times;</span>
            <h3>¡ALERTA!</h3>
            <p id="report-description">¿ESTA SEGURO DE ELIMINAR EL USUARIO?</p>
            <div class="botones">
                <button onclick="cerrarVentanaEmergenteEliminar()" class="Cancelar">Cancelar</button>
                <form id="formularioEliminarUsuario" action="@Url.Action("EliminarUsuario", "Home")" method="post">
                    <input type="hidden" name="Id" value="1" />
                    <button type="submit">Eliminar</button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/perfil.js"></script>
</body>



